<!DOCTYPE html>
{% include 'header.jinja' %}
<h2> Department "{{department.dep_name}}" Members</h2>
<section>
   <div class="row">

      <div class="col-sm-12" >
         {% if user.is_superuser %}
      <div class="table-responsive" >
         <table class="table table-striped table-bordered" >
            <thead>
               <tr><th style="width:10%">ID</th><th style="width:20%">First Name</th><th style="width:20%">Last Name</th><th style="width:20%"> SurName</th><th style="width:15%">Email</th><th style="width:15%">Phone</th>
               </tr>
            </thead>
               {% if department %}
                  {% for con in department.contact_set.all() %}
                     <tr><td><a href="/Contacts/viewcontact/{{con.id}}">{{ con.id }}</a></td><td> {{con.first_name}}</td><td>{{con.last_name}}</td><td> {{con.sur_name}}</td><td>{{con.email}}</td><td>{{con.phone}}</td></tr>
                  {% endfor %}
               {% endif %}
            <tbody>
            </tbody>
          </table>
      </div>
         {% endif %}
      </div>
   </div>
</section>
{% include 'footer.jinja' %}
